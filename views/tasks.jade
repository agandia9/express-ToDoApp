head
	//- TODO: Check if it's the good charset
	meta(charset="utf-8")
	meta(http-equiv="X-UA-Compatible", content="IE=edge")
	title 
	meta(name="description", content="")
	meta(name="viewport", content="width=device-width,initial-scale=1")
	//- TODO : Place favicon.ico and apple-touch-icon.png in the root directory
	block css
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", crossorigin="anonymous")
	block top-script
		//- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
		<!--[if lt IE 9]>
		script(src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.0/html5shiv.js")
		script(src="//cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.js")
		<![endif]-->

	block main
	body.jumbotron
		div.container
			h1= title
			p You have #{ tasks.length } tasks created
			
			form(action="/tasks", method="POST")
				div
					label Task Name
					input(type="text",name="name")
				div
				br
				input(type="submit",value="Add Task")
				div.col-md-12
				ul.list-group
		each task, i in tasks
				li.list-group-item.col-md-6 Task ID: #{ task.id } <br> Description: #{ task.name }
		//- Add your site or application content here

	block bottom-script
		script(src="https://code.jquery.com/jquery-1.12.4.min.js")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js", integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS", crossorigin="anonymous")
		script(src="//cdnjs.cloudflare.com/ajax/libs/holder/2.3.0/holder.js")
